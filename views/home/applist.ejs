<div class="modal fade" id="flairAppList" tabindex="-1" role="dialog"
     aria-labelledby="flairAppList" aria-hidden="true" ng-controller="adminCtrl">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title">Flair List</h4>
      </div>
      <div class="modal-body">
        <div class="row">

          <ul class="list-group col-md-7 col-md-offset-3">
            <li ng-repeat="app in flairApps" class="list-group-item row">
              <h4>
                <a href="/u/{{app.user}}">{{app.user}}</a>
                <span class="pull-right">
                  {{formattedName(app.flair)}}
                  <small>({{app.sub}})</small>
                  <button class="btn btn-default">Approve</button>
                  <button class="btn btn-danger">Deny</button>
                </span>
              </h4>
            </li>
          </ul>

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div><!-- /.modal -->