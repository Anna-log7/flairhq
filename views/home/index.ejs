<div class="container">
  <div class="main container clearfix">

    <div class="content">

      <div id="addNewReference">
        <input type="url" id="referenceUrl" placeholder="Enter new reference url"></input>
        <input type="submit" value="Add">
      </div>

      <h2>References</h2>
      <table class="table">
        <% for(ref in references) { %>
        <tr>
          <td><%= references[ref].url %></td>
        </tr>
        <% } %>
      </table>

    </div>
  </div>
</div>
