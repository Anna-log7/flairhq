<div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span
            class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Profile</h4>
      </div>

      <div class="modal-body">
        <form class="form-horizontal" role="form">
          <div id="editProfile">
            <div class="form-group">
              <label class="col-sm-3 control-label">Introduction:</label>

              <div class="col-md-8">
                <textarea type="text" class="form-control" ng-model="user.intro"></textarea>
              </div>
            </div>
            <div class="form-group">
              <label for="friendcode1" class="col-sm-3 control-label">Friend Code:</label>

              <div class="col-md-8">
                <input type="text" class="form-control"
                       ng-repeat="fc in user.friendCodes track by $index"
                       ng-model="user.friendCodes[$index]"></input>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-8 col-md-offset-3">
                <button class="btn btn-default btn-xs" ng-click="addFc()">
                  <span class="glyphicon glyphicon-plus-sign"></span>
                </button>
              </div>
            </div>

            <div class="form-group" ng-repeat="game in user.games">
              <label class="col-sm-3 control-label">IGN:</label>

              <div class="col-md-3">
                <input type="text" class="form-control" ng-model="game.ign"></input>
              </div>
              <label class="col-sm-2 control-label">TSV:</label>

              <div class="col-md-3">
                <input type="text" class="form-control" ng-model="game.tsv"></input>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-8 col-md-offset-3">
                <button class="btn btn-default btn-xs" ng-click="addGame()">
                  <span class="glyphicon glyphicon-plus-sign"></span>
                </button>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div id="saveError" class="alert alert-danger" role="alert" hidden></div>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" ng-click="saveProfile()">Save changes</button>
      </div>
    </div>
  </div>
</div>
