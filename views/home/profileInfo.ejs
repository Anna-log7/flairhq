<div class="row">
  <div class="col-md-6">
    <h3>{{refUser.name}}'s Information</h3>
    <h4>Introduction:</h4>
    <p>{{refUser.intro}}</p>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h4>Friend codes:</h4>
    <ul>
      <li ng-repeat="fc in refUser.friendCodes">{{fc}}</li>
    </ul>
  </div>
  <div class="col-md-6">
    <h4>Games:</h4>
    <ul>
      <li ng-repeat="game in refUser.games | orderBy:'createdAt'">
        IGN: {{game.ign}}
        TSV: {{game.tsv | numberFixedLen:4}}
      </li>
    </ul>
  </div>
</div>
